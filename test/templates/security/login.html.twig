{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}
{% block stylesheets %}
	<!-- Font Awesome -->
	<link
	href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet"/>
	<!-- Google Fonts -->
	<link
	href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet"/>
	<!-- MDB -->
	<link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.1/mdb.min.css" rel="stylesheet"/>
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="row">
			<div class="col">
				<div class="card">
					<div class="card-header bg-primary text-white text-center">
						Admin Panel Authentication
					</div>
					<hr>
					<div class="card-body">
						<form method="post">
							{% if error %}
								<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
							{% endif %}
							<div class="form-outline m-4">
								<input type="email" value="{{ last_username }}" id="form2Example1" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
								<label for="form2Example1" class="form-label">Email</label>
							</div>
							<div class="form-outline m-4">
								<input type="password" name="password" id="form2Example2" id="inputPassword" class="form-control" autocomplete="current-password" required>
								<label for="form2Example2" class="form-label">Password</label>
							</div>


							<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

							<button class="btn btn-primary btn-block mb-4" type="submit">
								Sign in
							</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
